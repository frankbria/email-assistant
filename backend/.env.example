# === MongoDB ===
MONGODB_URI=mongodb://localhost:27017/
MONGODB_DB=email_assistant
MONGODB_TEST_URI=mongodb://localhost:27017/
MONGODB_TEST_DB=email_assistant-test

# === CORS (for local frontend access) ===
FRONTEND_ORIGIN=http://localhost:3000

# === Environment mode ===
API_ENVIRONMENT=development

# === OpenAI / AI provider credentials ===
OPENAI_API_KEY=sk-...
OPENAI_API_MODEL=gpt-3.5-turbo
USE_AI_CONTEXT=true
# AI summarization toggle
USE_AI_SUMMARY=false
# AI actions toggle
USE_AI_ACTIONS=false

# === Email box provider information ===
MAILBOX_DOMAIN=mailslurp.biz
MAILBOX_API_KEY=mailbox-provider-api-key

# === Temporary IMAP for mailslurp (before webhook is implemented) ===
IMAP_HOST=mailslurpimap.click
IMAP_PORT=8993
IMAP_USERNAME=temporary-username
IMAP_PASSWORD=temporary-password

# === Optional: Email or SMTP credentials ===
EMAIL_FROM=ai-assistant@example.com
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your-smtp-user
SMTP_PASSWORD=your-smtp-password

# === Rate limiting email calls
WEBHOOK_RATE_LIMIT=5/minute

# === Emergency webhook API key in case of lockout ===
EMERGENCY_WEBHOOK_API_KEY=your-emergency-webhook-api-key

# === Logging ===
LOG_LEVEL=info

# === SendGrid API key ===
SENDGRID_API_KEY=your-sendgrid-api-key

# === Clerk Authentication Key ===
CLERK_SECRET_KEY=your-clerk-secret-key

# === Deployment Base URL ===
BASE_URL=http://localhost:8000

